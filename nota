#include <stdio.h>

#define TAM 5

int main(){
  float notas[5];
  float soma, media;

  for(int i = 0; i < TAM; i ++){
    printf("digite a nota: ");
    scanf("%f", &notas[i]);
  }
  for(int i = 0; i < TAM; i ++){
    soma += notas[i];
    printf("\nNota: %d %.2f", i+1, notas[i]);
  }
  media = soma / TAM;
  printf("\nMedia da Turma: %.2f", media);
  
}
